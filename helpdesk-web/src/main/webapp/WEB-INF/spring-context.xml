<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="
       	 http://www.springframework.org/schema/jee
	       http://www.springframework.org/schema/jee/spring-jee.xsd
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="hu.schonherz.training.helpdesk"/>

    <jee:local-slsb id="clientActivityService" jndi-name="ejb.clientActivityService"
                    business-interface="hu.schonherz.training.helpdesk.service.api.service.ClientActivityService"/>

    <jee:local-slsb id="LoginService" jndi-name="ejb.LoginService"
                    business-interface="hu.schonherz.training.helpdesk.service.api.service.LoginService"/>

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor">
        <property name="alwaysUseJndiLookup" value="true" />
    </bean>

</beans>