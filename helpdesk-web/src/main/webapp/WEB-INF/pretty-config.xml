<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="login">
        <pattern value="/login"/>
        <view-id value="/public/login.xhtml"/>
    </url-mapping>
    <url-mapping id="activity">
        <pattern value="/client/activity"/>
        <view-id value="/secured/activity.xhtml"/>
    </url-mapping>
    <url-mapping id="chat">
        <pattern value="/chat"/>
        <view-id value="/secured/chat.xhtml"/>
    </url-mapping>
    <url-mapping id="profile">
        <pattern value="/agent/profile"/>
        <view-id value="/secured/profile.xhtml"/>
    </url-mapping>
    <url-mapping id="statistics">
        <pattern value="/agent/statistics"/>
        <view-id value="/secured/statistics.xhtml"/>
    </url-mapping>

</pretty-config>